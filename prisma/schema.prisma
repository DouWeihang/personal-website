// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String?
  icon       String?
  type       Int
  account    String   @db.Char(12)
  password   String
  createTime DateTime @default(now()) @map("create_time")

  @@index([type])
  @@index([account])
  @@index([id, account])
  @@map("user")
}

model Tag {
  id          String @id @default(cuid())
  type        Int
  icon        String
  name        String @default("")
  url         String @default("")
  index       Int
  description String @default("")

  @@index([type])
  @@map("tag")
}

model Msg {
  id         String   @id @default(cuid())
  name       String
  telephone  String?
  email      String?
  content    String   @db.Text
  read       Boolean  @default(false)
  createTime DateTime @default(now()) @map("create_time")

  @@index([read])
  @@index([read, createTime])
  @@map("msg")
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  icon        String
  description String?
  status      Int      @default(1)
  content     String   @db.Text
  updateTime  DateTime @updatedAt @map("update_time")
  createTime  DateTime @default(now()) @map("create_time")

  @@index([type])
  @@map("post")
}

model Log {
  id          Int      @id @default(autoincrement())
  type        Int
  ip          String?
  description String?
  createTime  DateTime @default(now()) @map("create_time")

  @@index([type])
  @@index([type, createTime])
  @@map("log")
}

model Resource {
  id         Int      @id @default(autoincrement())
  size       Int
  name       String
  path       String   @unique
  type       Int      @default(-1)
  createTime DateTime @default(now()) @map("create_time")

  @@index([name])
  @@map("resource")
}
